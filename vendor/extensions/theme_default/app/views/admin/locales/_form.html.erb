<table>
  <tr>
    <td><label><%=t("name")%></label></td>
    <td><%= f.text_field :name, {"style" => "width:200px"} %></td>
  </tr>
  <tr>
    <td><label><%=t("code")%></label></td>
    <td><%= f.text_field :code, {"style" => "width:100px"}%></td>
  </tr>
  <tr>
    <td><label><%=t("default")%></label></td>
    <td>
      <label class="sub">
        <%= f.radio_button(:default, true ) %>
        <%= t("yes") %>
      </label> &nbsp;
      <label class="sub">
        <%= f.radio_button(:default, false ) %>
        <%= t("no") %>
      </label>
    </td>
  </tr>
  <tr>
    <td><label><%= t("enabled") %></label></td>
    <td>
      <label class="sub">
        <%= f.radio_button(:enabled, true ) %>
        <%= t("yes") %>
      </label> &nbsp;
      <label class="sub">
        <%= f.radio_button(:enabled, false ) %>
        <%= t("no") %>
      </label>
    </td>
  </tr>
  <tr>
    <td><label><%= t("currencies") %></label></td>
    <td>
      <% Currency.find(:all, :conditions => {:enabled => true}).each do |currency| %>
        <%= check_box_tag "locale[currency_ids][]", currency.id, @locale.currencies.include?(currency) %>
        <%= currency.name %>
      <% end %>
    </td>
  </tr>
</table>